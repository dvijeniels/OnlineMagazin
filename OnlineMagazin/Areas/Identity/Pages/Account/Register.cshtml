@page
@model RegisterModel

@{
    ViewData["Title"] = "Пользователь";
    Layout = "~/Views/Shared/_Home.cshtml";
}
<section class="page-content">
    <!-- Start Account-Create-Area -->
    <div class="account-create-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul class="page-menu">
                        <li><a href="~/Home/HomeIndex/">Главная</a></li>
                        <li class="active"><a href="~/Home/CreateUser/">Aккаунт</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="area-title">
                        <h3 class="title-group gfont-1">Создать аккаунт</h3>
                    </div>
                </div>
            </div>

            <div class="account-create">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="account-create-box">
                        <h2 class="box-info">Персональные данные</h2>
                        <div class="row">
                            <div class="col-sm-4 col-xs-12">
                                <div class="single-create">
                                    <p>ФИО <sup>*</sup></p>
                                    <input asp-for="Input.FirstAndLastName" placeholder="Фамилия Имя и Отчество" class="form-control" autocomplete="username" aria-required="true" />
                                    <span asp-validation-for="Input.FirstAndLastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-4 col-xs-12">
                                <div class="single-create">
                                    <p>Email почта <sup>*</sup></p>
                                    <input asp-for="Input.Email" class="form-control" type="email" placeholder="Введите почту email" autocomplete="username" aria-required="true" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="account-create-box">
                        <h2 class="box-info">Безопасность</h2>
                        <div class="row">
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <div class="single-create">
                                    <p>Пароль <sup>*</sup></p>
                                    <input asp-for="Input.Password" placeholder="Введите пароль" class="form-control" type="password" autocomplete="new-password" aria-required="true" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <div class="single-create">
                                    <p>Подтвердить Пароль<sup>*</sup></p>
                                    <input asp-for="Input.ConfirmPassword" placeholder="Подтвердите пароль" type="password" class="form-control" autocomplete="new-password" aria-required="true" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Зарегистрироваться</button>
                </form>
            </div>
        </div>
    </div>
    <!-- End Account-Create-Area -->
