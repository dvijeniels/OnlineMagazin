@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Сбросить пароль";
}

<section class="page-content">
    <div class="account-create-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="area-title">
                        <h3 class="title-group gfont-1">Сбросить пароль</h3>
                    </div>
                </div>
            </div>
            <div class="account-create">
                <form method="post">
                    <br />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="account-create-box">
                        <h2 class="box-info">Введите свои данные</h2>
                        <div class="row">
                            <div class="col-sm-4 col-xs-12">
                                <div class="single-create">
                                    <label class="form-label">Почта Email</label>
                                    <input asp-for="Input.Email" class="form-control" placeholder="Введите почта email" autocomplete="email" aria-required="true" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <div class="single-create">
                                    <label class="form-label">Пароль</label>
                                    <input asp-for="Input.Password" class="form-control" placeholder="Введите пароль" autocomplete="new-password" aria-required="true" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <div class="single-create">
                                    <label class="form-label">Повторный пароль</label>
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Подтвердите пароль" aria-required="true" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                            </div>
                        </div>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Сбросить пароль</button>
                </form>
            </div>
        </div>
    </div>
</section>










@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
