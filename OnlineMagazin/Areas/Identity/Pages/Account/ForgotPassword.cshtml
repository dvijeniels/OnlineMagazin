@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Забыли свой пароль?";
}

<section class="page-content">
    <div class="account-create-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul class="page-menu">
                        <li><a asp-area="" asp-controller="Home" asp-action="HomeIndex">Главная</a></li>
                        <li><a asp-area="Identity" asp-page="/Account/Login">Aккаунт</a></li>
                        <li class="active"><a id="forgot-password" asp-page="./ForgotPassword"> Сброс пароля</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="area-title">
                        <h3 class="title-group gfont-1">Введите адрес электронной почты для сброса пароля.</h3>
                    </div>
                </div>
            </div>
            <div class="account-create">
                <form method="post">
                    <br>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="account-create-box">
                        <h2 class="box-info">Электронная почта</h2>
                        <br>
                        <div class="row">
                            <div class="col-sm-4 col-xs-12">
                                <div class="single-create">
                                    <label class="form-label">Почта Email</label>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Отправить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

