@model OnlineMagazin.Models.CategoryFeature

@{
    ViewData["Title"] = "Характеристики категорий";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div style="margin-left:1%">
    <br />
    <h5 style="margin-left:40%">Детали характеристики категорий</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FeatureName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FeatureName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Unit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoriName)
        </dd>
    </dl>
</div>
<div style="margin-left:1%">
    <a asp-action="Edit" class="btn btn-outline-dark mb-3" asp-route-id="@Model.CategoryFeatureId">Изменить</a> |
    <a class="btn btn-outline-secondary mb-3" asp-action="Index"><i class="ti-arrow-left">  Вернуться в список</i></a>
</div>
