@model IEnumerable<OnlineMagazin.Models.Sliders>

@{
    ViewData["Title"] = "Слайд";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="col-12 mt-lg-3">
    <div class="card">
        <a asp-action="Create" class="btn btn-outline-secondary mb-3"><i class="ti-plus"></i>  Создать новый</a>
        <div class="data-tables datatable-dark">
            <table id="dataTable3" class="text-center">
                <thead class="text-capitalize">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.SliderResim)
                        </th>
                        <th>
                            Картинка
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SliderName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SliderDescription)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SliderResim)
                        </td>
                        <td>
                            <img src="@("~/image/"+item.SliderResim)" asp-append-version="true" width="200" height="200" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SliderName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SliderDescription)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.SliderId">Изменить</a> |
                            <a asp-action="Details" asp-route-id="@item.SliderId">Детали</a> |
                            <a asp-action="Delete" asp-route-id="@item.SliderId">Удалить</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>