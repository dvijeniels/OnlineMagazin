
@{
    ViewData["Title"] = "Subcribe";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<br />
<h5 style="margin-left:50%">Создать</h5>
<hr />
<div >
    <div class="col-md-12">
        <form asp-action="Subcribe">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Тема сообщения</label>
                <input name="Subject" class="form-control" required/>
            </div>
            <div class="form-group">
                <label name="EmailTemplate" class="control-label">Текст сообщение</label>
                <textarea name="EmailTemplate" id="editorId"> </textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Отправить" class="btn btn-primary" />
            </div>
        </form> 
    </div>
</div>

<div style="margin-left:1%">
    <a class="btn btn-outline-secondary mb-3" asp-action="Index"><i class="ti-arrow-left">  Вернуться в список</i></a>
</div>

<script type="text/javascript">CKEDITOR.replace('editorId');</script>