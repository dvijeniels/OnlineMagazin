@model OnlineMagazin.Models.Duyrular

@{
    ViewData["Title"] = "Новости";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<br />
<h5 style="margin-left:50%">Изменить</h5>
<hr />
<div>
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DuyuruId" />
            <div class="form-group">
                <label asp-for="DuyuruAd" class="control-label"></label>
                <input asp-for="DuyuruAd" class="form-control" />
                <span asp-validation-for="DuyuruAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duyuruicerik" class="control-label"></label>
                <textarea asp-for="Duyuruicerik" id="editorId" > </textarea>
                <span asp-validation-for="Duyuruicerik" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="DuyuruLink" class="control-label"></label>
                <input asp-for="DuyuruLink" class="form-control" />
                <span asp-validation-for="DuyuruLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DuyuruResimFile" class="control-label"></label>
                <input asp-for="DuyuruResimFile" accept="image/*" />
                <span asp-validation-for="DuyuruResimFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-left:1%">
    <a class="btn btn-outline-secondary mb-3" asp-action="Index"><i class="ti-arrow-left">  Вернуться в список</i></a>
</div>

<script type="text/javascript">CKEDITOR.replace('editorId');</script>