@model OnlineMagazin.Models.Message

@{
    ViewData["Title"] = "Связаться с нами";
    Layout = "~/Views/Shared/_Home.cshtml";
}
<div class="container">
    <div class="contact-message">
        <fieldset>
            @if (ViewBag.Hata == "succes")
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("Ваше сообщение успешно отправлено!");
                    };
                </script>
            }
            else if (ViewBag.Hata == "error")
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("Не удалось отправить!");
                    };
                </script>
                <div class="alert alert-danger" role="alert">
                    <strong>Сначала заполните!</strong> И повторите попытку.
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                </div>

            }
            <legend>Форма обратной связи</legend>
            <form asp-action="Message">
                <div class="form-group form-horizontal">
                    <div class="row">
                        <label class="col-sm-2 control-label"><sup>*</sup>ФИО отправителя</label>
                        <div class="col-sm-10">
                            <input asp-for="MessageGonderen" class="form-control" />
                        </div>
                        <span asp-validation-for="MessageGonderen" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group form-horizontal">
                    <div class="row">
                        <label class="col-sm-2 control-label"><sup>*</sup>Тема сообщения</label>
                        <div class="col-sm-10">
                            <input asp-for="MessageBaslik" class="form-control" />
                        </div>
                        <span asp-validation-for="MessageBaslik" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group form-horizontal">
                    <div class="row">
                        <label class="col-sm-2 control-label"><sup>*</sup>E-Mail Почта</label>
                        <div class="col-sm-10">
                            <input asp-for="MessageMail" class="form-control" />
                        </div>
                        <span asp-validation-for="MessageMail" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group form-horizontal">
                    <div class="row">
                        <label class="col-sm-2 control-label"><sup>*</sup>Сообщение</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" asp-for="MessageIcerik" rows="10"></textarea>
                        </div>
                        <span asp-validation-for="MessageIcerik" class="text-danger"></span>
                    </div>
                </div>
                <div class="buttons pull-right">
                    <input id="btnalert" class="btn btn-primary" type="submit" value="Отправить" name="submit" />
                </div>
            </form>
        </fieldset>
    </div>
    <div class="map-area">
        <div id="googleMap" style="width:100%;height:350px;"></div>
    </div>
</div>


<script src="https://maps.googleapis.com/maps/api/js"></script>

<script>
    function initialize() {
        var mapOptions = {
        zoom: 5,
            scrollwheel: false,
            center: new google.maps.LatLng(40.7058316, -74.2581978)
        };

        var map = new google.maps.Map(document.getElementById('googleMap'),
            mapOptions);

        var marker = new google.maps.Marker({
        position: map.getCenter(),
            animation: google.maps.Animation.BOUNCE,
            icon: 'img/map-marker.png',
            map: map
        });
    }

    google.maps.event.addDomListener(window, 'load', initialize);
</script>

