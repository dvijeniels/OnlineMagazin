@model OnlineMagazin.Models.Orders
@{
    ViewData["Title"] = "Создание заказа";
    Layout = "~/Views/Shared/_Home.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Создание заказа</title>
</head>
<body>
    <section class="page-content">
    <div class="account-create-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul class="page-menu">
                        <li><a asp-area="" asp-controller="Home" asp-action="HomeIndex">Главная</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Cart">Корзина</a></li>
                        <li class="active"><a asp-area="" asp-controller="Home" asp-action="OrderCreate">Создание заказа</a></li>
                    </ul>
                </div>
            </div>
            <div class="account-create">
                <form asp-action="OrderCreate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <sup>*</sup>
                    <label asp-for="FirstAndLastName" class="control-label"></label>
                    <input asp-for="FirstAndLastName" value="@ViewBag.AdSoyad" placeholder="Фамилия Имя и Отчество" class="form-control" />
                    <span asp-validation-for="FirstAndLastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <sup>*</sup>
                    <label asp-for="Region" class="control-label"></label>
                    <input asp-for="Region" value="@ViewBag.Region" placeholder="Введите регион" class="form-control" />
                    <span asp-validation-for="Region" class="text-danger"></span>
                </div>
                
               <div class="form-group">
                   <sup>*</sup>
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" value="@ViewBag.City" placeholder="Введите город" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <sup>*</sup>
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" value="@ViewBag.Address" placeholder="Введите адрес" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                     <label asp-for="Address2" class="control-label"></label>
                    <input asp-for="Address2" value="@ViewBag.Address2" placeholder="Введите адрес 2" class="form-control" />
                    <span asp-validation-for="Address2" class="text-danger"></span>
                </div>
                
               <div class="form-group">
                   <sup>*</sup>
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" value="@ViewBag.PhoneNumber" placeholder="Введите телефон номер" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label><sup>*</sup>Вид оплаты</label>
                    <select placeholder="Выберите вид оплаты" asp-for="BuyingType" class="form-control form-control-lg">
                        <option value="Не выбрано">---вид оплаты---</option>
                        <option value="Наличными">Наличными</option>
                        <option value="Картой">Картой</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Comment" class="control-label"></label>
                    <input asp-for="Comment" placeholder="Можете ввести дополнительно к заказу" class="form-control" />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Заказать" class="btn btn-primary" />
                </div>
            </form>
                </div>
                <div>
                <a asp-action="Cart">Назад в корзину</a>
            </div>
            </div>
        </div>

</section>




</body>
</html>
