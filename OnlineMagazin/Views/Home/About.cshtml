@model IEnumerable<OnlineMagazin.Models.About>
@{
    ViewData["Title"] = "О нас";
    ViewData["keywords"] = @"В продаже всё от А до Я И выбор сделать нет проблем, Там продавцы помогут всем, Советы дельные дают, Всё подберут за 5 минут, Товар в наличии на складах,
    От магазина в 100 шагах, А если нет прямо сейчас, То привезут всё на заказ, Всего один только звонок, Доставят всё, что нужно в срок, Товары просто всё отпад, 
    на каждый есть сертификат, Объём весь посчитают тут, Назад излишки заберут,На 10 тысяч покупай, Домой бесплатно доставляй, Так что ремонт у нас уже в кармане, 
    И хорошо, всё хорошо. Магазин «РиО» – ремонт и отделка. Подумайте о нас, если речь пойдёт о ремонте.";
    ViewData["Descption"] = "«Vector строй маркет» - огромный ассортимент строительных материалов и оптовые цены. Наши клиенты — это и крупные строительные организации, и частный застройщик. Какой строитель – такой и дом";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<section class="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul class="page-menu">
                    <li><a href="~/Home/HomeIndex/">Главная</a></li>
                    <li class="active"><a href="#">О нас</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="about-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="f-title text-center">
                        <h3 class="title text-uppercase">О нас</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-7 col-sm-12 col-xs-12">
                    <div class="about-page-cntent">
                        @foreach (var item in Model)
                        {
                            @Html.Raw(item.MetinIcerik) 
                        }
                    </div>
                </div>
                <div class="col-md-5 col-sm-12 col-xs-12">
                    <div class="img-element">
                        @foreach (var item in Model) {
                            <img alt="Наш строительный рынок Вектор строй маркет pskanker.ru" src="~/image/@item.Resim" loading="lazy">
                         }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="our-team">
