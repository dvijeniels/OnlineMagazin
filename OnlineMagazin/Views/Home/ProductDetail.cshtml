@using OnlineMagazin.ViewModels
@model ViewProductUyeCart

@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<section class="page-content">

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul class="page-menu">
                    <li><a href="~/Home/homeIndex/">Главная</a></li>
                    <li><a href="#">Category name</a></li>
                    <li class="active"><a href="#">Product name</a></li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                @await Component.InvokeAsync("CategoryList")
                <!-- START SMALL-PRODUCT-AREA -->
                @await Component.InvokeAsync("BestsellerProducts")
                <!-- END SMALL-PRODUCT-AREA -->
                <!-- START SIDEBAR-BANNER -->
                @await Component.InvokeAsync("SliderBanner")
                
                <!-- END SIDEBAR-BANNER -->
            </div>
            @*  <form method="post" asp-action="HomeController">*@
            <div class="col-md-9 col-sm-12 col-xs-12">
                <!-- Start Toch-Prond-Area -->
                <div class="toch-prond-area">
                    <div class="row">
                        <div class="col-md-5 col-sm-5 col-xs-12">
                            <div class="clear"></div>
                            <div class="tab-content">
                                <!-- Product = display-1-1 -->
                                <div role="tabpanel" class="tab-pane fade in active" id="display-1">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <div class="toch-photo">
                                                <a href="#"><img src="~/image/@Model.products.Foto" data-imagezoom="true" alt="#" /></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End Product = display-1-1 -->
                                <!-- Start Product = display-1-2 -->
                                <div role="tabpanel" class="tab-pane fade" id="display-2">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <div class="toch-photo">
                                                <a href="#"><img src="~/image/@Model.products.Foto2" data-imagezoom="true" alt="#" /></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End Product = display-1-2 -->
                                <!-- Start Product = di3play-1-3 -->
                                <div role="tabpanel" class="tab-pane fade" id="display-3">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <div class="toch-photo">
                                                <a href="#"><img src="~/image/@Model.products.Foto3" data-imagezoom="true" alt="#" /></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End Product = display-1-3 -->
                                <!-- Start Product = di3play-1-4 -->
                                <div role="tabpanel" class="tab-pane fade" id="display-4">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <div class="toch-photo">
                                                <a href="#"><img src="~/image/@Model.products.Foto4" data-imagezoom="true" alt="#" /></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div role="tabpanel" class="tab-pane fade" id="display-5">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <div class="toch-photo">
                                                <a href="#"><img src="~/image/@Model.products.Foto5" data-imagezoom="true" alt="#" /></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div role="tabpanel" class="tab-pane fade" id="display-6">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <div class="toch-photo">
                                                <a href="#"><img src="~/image/@Model.products.Foto6" data-imagezoom="true" alt="#" /></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End Product = display-1-4 -->
                            </div>
                            <!-- Start Toch-prond-Menu -->
                            <div class="toch-prond-menu">
                                <ul role="tablist">
                                    <li role="presentation" class=" active"><a href="#display-1" role="tab" data-toggle="tab"><img src="~/image/@Model.products.Foto" alt="#" /></a></li>
                                    <li role="presentation"><a href="#display-2" role="tab" data-toggle="tab"><img src="~/image/@Model.products.Foto2" alt="#" /></a></li>
                                    <li role="presentation"><a href="#display-3" role="tab" data-toggle="tab"><img src="~/image/@Model.products.Foto3" alt="#" /></a></li>
                                    <li role="presentation"><a href="#display-4" role="tab" data-toggle="tab"><img src="~/image/@Model.products.Foto4" alt="#" /></a></li>
                                    <li role="presentation"><a href="#display-5" role="tab" data-toggle="tab"><img src="~/image/@Model.products.Foto5" alt="#" /></a></li>
                                    <li role="presentation"><a href="#display-6" role="tab" data-toggle="tab"><img src="~/image/@Model.products.Foto6" alt="#" /></a></li>
                                </ul>
                            </div>
                            <!-- End Toch-prond-Menu -->
                        </div>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            <h2 class="title-product">@Html.DisplayFor(model => model.products.Baslik)</h2>
                            <div class="about-toch-prond">
                                <p>
                                    <span class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star-o"></i>
                                    </span>
                                    <a href="#">1 отзывов</a>
                                    /
                                    <a href="#otziv">Написать отзыв</a>
                                </p>
                                <hr />
                                <p class="short-description">@Html.DisplayFor(model => model.products.Icerik) </p>
                                <hr />
                                <span asp-for="products.Price" class="current-price fa fa-money">@Html.DisplayFor(model => model.products.Price) KGS</span>
                                <input id="ProductPrice" value="@Html.DisplayFor(model => model.products.Price)" class="hide" />
                                <span class="item-stock">Доступность: <span class="text-stock">В наличии</span></span>
                            </div>
                            <div class="about-product">
                                <div class="product-select product-color">
                                    <label><sup>*</sup>Color</label>
                                    <select class="form-control">
                                        <option> --- Please Select --- </option>
                                        <option>Black (+$10.00) </option>
                                        <option>White (+$8.00)</option>
                                        <option>Pink (+$30.00)</option>
                                        <option>Green (+$30.00)</option>
                                    </select>
                                </div>
                                <div class="product-select product-Size">
                                    <label><sup>*</sup>Size</label>
                                    <select class="form-control">
                                        <option> --- Please Select --- </option>
                                        <option>Small (+$10.00)</option>
                                        <option>Medium (+$20.00)</option>
                                        <option>Large (+$30.00)</option>
                                        <option>Extra Large (+$35.00)</option>
                                    </select>
                                </div>
                                <div class="product-select product-type">
                                    <label><sup>*</sup>Text</label>
                                    <input type="text" class="form-control" placeholder="Text" />
                                </div>
                                <div class="product-select product-date">
                                    <label><sup>*</sup>Date</label>
                                    <input type="text" class="form-control" placeholder="2016/02/15" />
                                </div>
                                <div class="product-select product-checkbox">
                                    <label><sup>*</sup>Checkbox</label>
                                    <label><input type="checkbox" /> Checkbox 1  (+$5.00)</label>
                                </div>
                                <div class="product-select product-button">
                                    <button type="submit">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="product-quantity">
                                <span>Кол-во</span>
                                <input type="number" id="qty" min="1" value="1" />
                                <button type="submit" class="toch-button toch-wishlist">Понравившиеся</button>
                                <button type="submit" class="toch-button toch-compare">Сравнить</button>
                                <br />
                                <br />
                                <button type="submit" onclick="AddProductToCart()" id="ppid" value="@Model.products.ProductId" class="toch-button toch-add-cart">Добавить в корзину</button>
                            </div>
                        </div>
                    </div>
                    <!-- Start Toch-Box -->
                    <div class="toch-box">
                        <div class="row">
                            <div class="col-xs-12">
                                <!-- Start Toch-Menu -->
                                <div class="toch-menu">
                                    <ul role="tablist">
                                        <li role="presentation" class=" active"><a href="#description" role="tab" data-toggle="tab">Описание</a></li>
                                        <li role="presentation"><a href="#reviews" role="tab" data-toggle="tab">Отзывы (1)</a></li>
                                    </ul>
                                </div>
                                <!-- End Toch-Menu -->
                                <div class="tab-content toch-description-review" id="otziv">
                                    <!-- Start display-description -->
                                    <div role="tabpanel" class="tab-pane fade in active" id="description">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="toch-description">
                                                    <p>
                                                        @Model.products.Icerik
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End display-description -->
                                    <!-- Start display-reviews -->
                                    <div role="tabpanel" class="tab-pane fade" id="reviews">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="toch-reviews">
                                                    <div class="toch-table">
                                                        <table class="table table-striped table-bordered">
                                                            <tbody>
                                                                <tr>
                                                                    <td><strong>Отзыв</strong></td>
                                                                    <td class="text-right"><strong>16/02/2021</strong></td>
                                                                </tr>
                                                                <tr>
                                                                    <td colspan="2">
                                                                        <p>Ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв ваш отзыв .</p>
                                                                        <span><i class="fa fa-star"></i></span>
                                                                        <span><i class="fa fa-star"></i></span>
                                                                        <span><i class="fa fa-star"></i></span>
                                                                        <span><i class="fa fa-star"></i></span>
                                                                        <span><i class="fa fa-star-o"></i></span>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <div class="toch-review-title">
                                                        <h2>Оставить отзыв</h2>
                                                    </div>
                                                    <div class="review-message">
                                                        <div class="col-xs-12">
                                                            <p>
                                                                <sup>*</sup>Ваше имя <br>
                                                                <input type="text" class="form-control" />
                                                            </p>
                                                            <p>
                                                                <sup>*</sup>Ваш отзыв <br>
                                                                <textarea class="form-control"></textarea>
                                                            </p>
                                                        </div>
                                                        <div class="help-block">
                                                            <span class="note">Примечание:</span>
                                                            HTML не переводится!
                                                        </div>
                                                        <div class="get-rating">
                                                            <span><sup>*</sup>Оценка </span>
                                                            Плохо
                                                            <input type="radio" value="1" name="rating" />
                                                            <input type="radio" value="2" name="rating" />
                                                            <input type="radio" value="3" name="rating" />
                                                            <input type="radio" value="4" name="rating" />
                                                            <input type="radio" value="5" name="rating" />
                                                            Отлично
                                                        </div>
                                                        <div class="buttons clearfix">
                                                            <button class="btn btn-primary pull-right">Продолжить</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End Product = display-reviews -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Toch-Box -->
                    <!-- START PRODUCT-AREA -->
                    @await Component.InvokeAsync("RelatedProducts", new { id = Model.products.ProductId })
                    <!-- END PRODUCT-AREA -->
                </div>
                <!-- End Toch-Prond-Area -->
            </div>
            @* </form>*@
        </div>
    </div>
    <!-- START BR      AND - LOGO-AREA -->
</section>
@section script{
    <script>
        function AddProductToCart() {
            var pID = $("#ppid").val();
            var qty = $("#qty").val();
            var productPrice = $("#ProductPrice").val();
            $.post("/Home/AddProductToCart?productID=" + pID + "&qty=" + qty + "&productPrice=" + productPrice + "", function (data) {
                if (data == null) {
                    alert("Выполните вход для покупки!");
                }
                else alert("Товар успешно добавлен в корзину!");
            });
            return false;
        };
    </script>
}
